doctype html
html(lang='en', ng-app='codingHouseClock')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Coding House Clock
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/superhero/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    .container-fluid(ng-controller='clock')
      .row 
        .col-xs-12
          p#title Coding House Clock
          p#mainTitle Use Your Limited Time Wisely
      .row
        .col-xs-3
          .form-group
            label(for='startDate') Current cohort: START DATE
            input(type='date', name='startDate', ng-model='start')
            label(for='startDate') Current cohort: END DATE
            input(type='date', name='endDate', ng-model='end')
            label(for='startButton') Launch Cohort Clock
            button.btn.btn-success(name='startButton', ng-click='startClock()') Start!
      .row
        .col-xs-6
          p Days {{daysSinceDate}}
          p Hours
          p Minutes
          p Seconds
        .col-xs-6
          p#daysLeft Days
          p Hours
          p Minutes
          p Seconds

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/moment/min/moment.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src='/vendor/firebase/firebase.js')
    script(src='/vendor/angular/angular.min.js')
    script(src='/vendor/angularfire/dist/angularfire.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
